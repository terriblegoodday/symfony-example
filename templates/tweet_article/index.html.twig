{% extends 'base.html.twig' %}

{% block title %}TweetArticle index{% endblock %}

{% block body %}
    <h1>TweetArticle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Body</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tweet_article in tweet_articles %}
            <tr>
                <td>{{ tweet_article.id }}</td>
                <td>{{ tweet_article.body }}</td>
                <td>
                    <a href="{{ path('tweet_article_show', {'id': tweet_article.id}) }}">show</a>
                    <a href="{{ path('tweet_article_edit', {'id': tweet_article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tweet_article_new') }}">Create new</a>
{% endblock %}
